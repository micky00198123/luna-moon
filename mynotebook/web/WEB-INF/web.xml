<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

	<!-- 登录映射 -->
	<!-- 连接login.jsp的userLogin(post请求)与LoginServlet的doPost方法 -->
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.qklt.controller.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/JSP/userLogin</url-pattern>
	</servlet-mapping>

	<!-- 注册映射 -->
	<!-- 连接register.jsp的userRegister(post请求)与RegisterServlet的doPost方法 -->
	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>com.qklt.controller.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/JSP/userRegister</url-pattern>
	</servlet-mapping>

	<!-- 注销映射 -->
	<!-- 连接home.jsp的logout(get请求)与HomeServlet的doGet方法 -->
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.qklt.controller.HomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/JSP/logout</url-pattern>
	</servlet-mapping>
 	
</web-app>




